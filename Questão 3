#include <stdio.h>
#include <stdbool.h>

bool ehPrimo(int num) {
    if (num <= 1) {
        return false;
    }
    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) {
            return false;
        }
    }
    return true;
}

int main() {
    int numero;

    printf("Digite um nÃºmero inteiro positivo: ");
    scanf("%d", &numero);

    if (ehPrimo(numero)) {
        printf("%d Ã© primo.\n", numero);
    } else {
        printf("%d nÃ£o Ã© primo.\n", numero);
    }

    return 0;
}
