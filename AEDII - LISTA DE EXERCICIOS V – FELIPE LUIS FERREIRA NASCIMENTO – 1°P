#include <stdio.h>
#include <stdlib.h>
#include <time.h>

// Função para calcular a média de um array de números inteiros
double calcularMedia(int arr[], int tamanho) {
    int soma = 0;
    for (int i = 0; i < tamanho; i++) {
        soma += arr[i];
    }
    return (double)soma / tamanho;
}

int main() {
    int tamanho;
    
    // Semente para a função rand() para gerar números aleatórios diferentes a cada execução
    srand(time(0));
    
    // Solicitando ao usuário o tamanho do array
    printf("Informe a quantidade de elementos do array: ");
    scanf("%d", &tamanho);
    
    // Criando o array
    int arr[tamanho];
    
    // Gerando valores aleatórios para o array
    for (int i = 0; i < tamanho; i++) {
        arr[i] = rand() % 100; // Números aleatórios entre 0 e 99
    }
    
    // Exibindo os valores gerados
    printf("Valores gerados para o array:\n");
    for (int i = 0; i < tamanho; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    
    // Calculando a média
    double media = calcularMedia(arr, tamanho);
    
    // Exibindo a média
    printf("A média dos valores do array é: %.2f\n", media);
    
    return 0;
}
